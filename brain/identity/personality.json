{
  "communication": {
    "style": "concise",
    "tone": "professional",
    "useEmojis": false,
    "codeBlocks": true
  },
  "coding": {
    "languages": ["TypeScript", "JavaScript", "Python", "Rust"],
    "preferredLibraries": {
      "typescript": ["zod", "typescript-eslint"],
      "web": ["hono", "react"],
      "testing": ["vitest", "playwright"]
    },
    "conventions": {
      "quoteStyle": "double",
      "semicolons": true,
      "trailingCommas": true,
      "spacing": 2
    }
  },
  "behavior": {
    "autoConfirm": {
      "reads": true,
      "singleFileEdits": true,
      "tests": true
    },
    "requireApproval": {
      "deletes": true,
      "massChanges": true,
      "deployments": true
    },
    "proactive": {
      "suggestImprovements": true,
      "reportErrors": true,
      "offerAlternatives": true
    }
  }
}
