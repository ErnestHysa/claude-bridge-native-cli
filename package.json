{
  "name": "claude-bridge-native-cli",
  "version": "0.1.0",
  "description": "Telegram bridge for Claude Code CLI - control Claude from your phone",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest"
  },
  "bin": {
    "claude-bridge": "dist/cli.js"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.4.5",
    "node-telegram-bot-api": "^0.66.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.10",
    "@types/node-telegram-bot-api": "^0.64.3",
    "@types/winston": "^2.4.4",
    "eslint": "^9.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
